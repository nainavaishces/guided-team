{
  "name": "automation",
  "version": "1.0.0",
  "description": "A scalable and maintainable test automation framework built with Playwright and TypeScript, following a component-based architecture.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "npx playwright test",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    "test:mobile-chrome": "npx playwright test --project=\"Mobile Chrome\"",
    "test:mobile-safari": "npx playwright test --project=\"Mobile Safari\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "check:fix": "npm run typecheck && npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.10",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "dotenv": "^17.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.0",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "winston": "^3.17.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
